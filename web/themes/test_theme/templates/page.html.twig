<div id="page-wrapper" class="page-wrapper">
  <div id="page">

    {# Header Section #}
    {% if page.header or page.primary_menu %}
      <header id="header" class="site-header modern-header" role="banner">
        <div class="container header-container">

          {# Logo Section #}
          <div class="logo">
            <a href="{{ path('<front>') }}">
              <img src="{{ directory }}/logo.png" alt="{{ site_name }}" />
            </a>
          </div>

          {# Main Navigation #}
          {% if page.primary_menu %}
            <nav id="main-menu" class="main-navigation">
              {{ page.primary_menu }}
            </nav>
          {% endif %}

          {# Header Right Section: Search & Submit Recipe Button #}
          <div class="header-actions">
            <form class="search-form" action="/search" method="get">
              <input type="text" name="s" placeholder="Search recipes..." />
              <button type="submit">üîç</button>
            </form>
            <a href="/submit-recipe" class="btn btn-primary">Submit Recipe</a>
          </div>

          {# Mobile Navigation Toggle #}
          <button class="mobile-nav-toggle" aria-label="Open menu">
            <span></span><span></span><span></span>
          </button>
        </div>

        {# Mobile Navigation (Collapsible) #}
        <div id="mobile-menu" class="mobile-menu">
          {{ page.primary_menu }}
        </div>
      </header>
    {% endif %}

    {# Hero Section (Optional) #}
    {% if page.hero %}
      <section class="hero-section">
        <div class="container">
          {{ page.hero }}
        </div>
      </section>
    {% endif %}

    {# Main Content Area #}
    <div id="main-wrapper" class="layout-main-wrapper">
      <div id="main" class="layout-main container">
        <div class="main-content">
          <a id="main-content" tabindex="-1"></a>
          {{ page.breadcrumb }}

          <div class="content-grid">
            <main role="main" class="site-main">
              {{ page.content_above }}
              {{ page.content }}
            </main>

            {% if page.sidebar %}
              <aside class="sidebar">
                {{ page.sidebar }}
              </aside>
            {% endif %}
          </div>

          {{ page.content_below }}
        </div>

        {# Social Bar Section #}
        {% if page.social %}
          <div class="social-bar">
            {{ page.social }}
          </div>
        {% endif %}
      </div>
    </div>

    {# Footer Section #}
    <footer class="site-footer">
      <div class="container footer-container">
        <div class="footer-top">
          {{ page.footer_top }}
        </div>
        <div class="footer-bottom">
          {{ page.footer_bottom }}
        </div>
      </div>
    </footer>

    <div class="overlay"></div>
  </div>
</div>
