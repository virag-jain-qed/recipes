{# page--home.html.twig #}

<div class="homepage-wrapper">
  <header>
    <div class="hero-banner">
      <h1>Welcome to Flavorful Recipes!</h1>
      <p>Explore our collection of the best recipes from around the world.</p>
      <a href="/recipes" class="cta-button">Start Exploring</a>
    </div>
  </header>

  <div class="content-wrapper">
    <section class="featured-recipes">
      <h2>Featured Recipes</h2>
      <div class="recipe-grid">
        {{ page.featured_recipes }}
      </div>
    </section>

    <section class="categories">
      <h2>Browse by Categories</h2>
      <div class="category-grid">
        {{ page.categories }}
      </div>
    </section>
  </div>
</div>
