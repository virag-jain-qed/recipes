# Ignore Drupal core, contrib modules, and themes (managed by Composer)
web/core/
web/modules/contrib/
web/themes/contrib/
web/profiles/contrib/
web/libraries/
web/vendor/

# Ignore settings and services files that may contain sensitive data
web/sites/*/*settings*.php
web/sites/*/*services*.yml
web/sites/*/files
web/sites/*/public
web/sites/*/private
web/sites/*/files-public
web/sites/*/files-private

# Ignore temporary and cache files
web/sites/*/translations
web/sites/*/tmp
web/sites/*/cache

# Ignore Drupal scaffold files (generated by Composer)
web/.csslintrc
web/.editorconfig
web/.eslintignore
web/.eslintrc.json
web/.gitattributes
web/.htaccess
web/.ht.router.php
web/autoload.php
web/composer.json
web/composer.lock
web/example.gitignore
web/index.php
web/INSTALL.txt
web/LICENSE.txt
web/README.txt
web/robots.txt
web/update.php
web/web.config

# Ignore Composer dependencies and scripts
/vendor/
composer.phar
composer.lock

# Ignore Node.js dependencies (if applicable)
node_modules/
npm-debug.log
yarn-error.log

# Ignore IDE and editor files
*.idea/
*.vscode/
*.DS_Store
*.log
*.swp
*.swo
